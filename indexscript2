function pickedthisclass(classid) {
    document.getElementById('classnumber').value = classid;
    document.getElementById('classnumber2').value = classid;
}

  function downloadFilteredStudentData() {
    let namesarray = [["Number", "Name", "ID Number", "Face Uploaded", "Face Detected"]]; // CSV headers
    
    for (k = 0; k < students_list.length; k++) {
        if (students_list[k][4] == classid) {  // Filter by class ID
            let facedetected = false;

            for (b = 0; b < identclass.length; b++) {
                if (identclass[b] == classid && students_list[k][1] == identnames[b] && identid[b] == students_list[k][2]) {
                    facedetected = true;
                    break; // No need to check further
                }
            }

            // Push student data to CSV array
            namesarray.push([
                students_list[k][0],  // Student Number
                students_list[k][1],  // Name
                students_list[k][2],  // ID Number
                students_list[k][3] == 0 ? "False" : "True",  // Face Uploaded
                facedetected ? "Detected" : "Not Detected" // Face Detected
            ]);
        }
    }

    // Convert to CSV format
    let csvContent = namesarray.map(row => row.join(",")).join("\n");
    
    // Create Blob and trigger download
    let blob = new Blob([csvContent], { type: "text/csv" });
    let a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = `Attendance_list_${classid}.csv`; 
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
}

function downloadFilteredStudentDataTXT() {
    let textContent = `Attendance List for Class ID: ${classid}\n\n`;
    textContent += "Number | Name | ID Number | Face Uploaded | Face Detected\n";
    textContent += "------------------------------------------------------\n";

    for (let s = 0; s < students_list.length; s++) {
        if (students_list[s][4] == classid) {  // Filter by class ID
            let detected = false;

            for (let t = 0; t < identclass.length; t++) {
                if (
                    identclass[t] == classid &&
                    students_list[s][1] == identnames[t] &&
                    identid[t] == students_list[s][2]
                ) {
                    detected = true;
                    break; // No need to check further
                }
            }

            // Format student data
            textContent += `${students_list[s][0]} | ${students_list[s][1]} | ${students_list[s][2]} | ${students_list[s][3] == 0 ? "False" : "True"} | ${detected ? "Detected" : "Not Detected"}\n`;
        }
    }

    // Create Blob and trigger download
    let blob = new Blob([textContent], { type: "text/plain" });
    let a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = `Attendance_list_${classid}.txt`; 
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
}

